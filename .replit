entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-25_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[[ports]]
localPort = 8000
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 8001
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "autopilot"

[[workflows.workflow]]
name = "autopilot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python autopilot.py"

[workflows.workflow.metadata]
outputType = "console"
